        <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
            <Image Source="vvvvv.jpg" Margin="0,0,0,20" WidthRequest="500" HeightRequest="300" />
        </StackLayout>

        <StackLayout Spacing="20" Orientation="Vertical"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label Text=" قصص قبل النوم" HorizontalOptions="Center" Margin="0" FontSize="28" TextColor="#FABB74" />
